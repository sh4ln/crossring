<Window x:Class="CrossringUI.Views.AuthPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authorization Required" 
        Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        ResizeMode="NoResize"
        Background="#1a1a2e">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸ›¡ï¸" FontSize="32" VerticalAlignment="Center" Margin="0,0,15,0"/>
                <StackPanel>
                    <TextBlock Text="Execution Blocked" FontSize="24" FontWeight="Bold" 
                               Foreground="#eaeaea"/>
                    <TextBlock Text="An unknown program is trying to run" 
                               Foreground="#a0a0a0" FontSize="14"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        
        <!-- Process Details -->
        <Border Grid.Row="1" Background="#16213e" CornerRadius="8" Padding="20">
            <StackPanel>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Program:" Foreground="#a0a0a0"/>
                    <TextBlock Grid.Column="1" x:Name="TxtProcessName" 
                               Foreground="#eaeaea" FontWeight="SemiBold" TextWrapping="Wrap"/>
                </Grid>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Path:" Foreground="#a0a0a0"/>
                    <TextBlock Grid.Column="1" x:Name="TxtPath" 
                               Foreground="#eaeaea" TextWrapping="Wrap" FontSize="12"/>
                </Grid>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="SHA-256:" Foreground="#a0a0a0"/>
                    <TextBlock Grid.Column="1" x:Name="TxtHash" 
                               Foreground="#eaeaea" FontSize="10" FontFamily="Consolas"/>
                </Grid>
                
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Signature:" Foreground="#a0a0a0"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Ellipse x:Name="SignedIndicator" Width="10" Height="10" 
                                 Fill="#ef4444" Margin="0,0,8,0"/>
                        <TextBlock x:Name="TxtSigner" Foreground="#eaeaea"/>
                    </StackPanel>
                </Grid>
                
                <Border Background="#0f3460" CornerRadius="5" Padding="12" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" Margin="0,0,10,0"/>
                        <TextBlock Text="This program is not in your whitelist and requires your authorization to run."
                                   Foreground="#fbbf24" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" Content="âŒ Deny" Click="Deny_Click"
                    Background="#ef4444" Foreground="White" 
                    Padding="15,12" Margin="0,0,5,0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="1" Content="Once" Click="AllowOnce_Click"
                    Background="#0f3460" Foreground="White" 
                    Padding="15,12" Margin="5,0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="2" Content="Session" Click="AllowSession_Click"
                    Background="#0f3460" Foreground="White" 
                    Padding="15,12" Margin="5,0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <Button Grid.Column="3" Content="âœ… Always" Click="AllowPermanent_Click"
                    Background="#4ade80" Foreground="#1a1a2e" 
                    Padding="15,12" Margin="5,0,0,0" Cursor="Hand" FontWeight="SemiBold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
