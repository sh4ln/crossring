<Window x:Class="CrossringUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="CROSSRING Security Dashboard" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource ForegroundBrush}">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    
    <Grid>
        <!-- System Tray Icon -->
        <tb:TaskbarIcon x:Name="TrayIcon"
                        IconSource="/Resources/icon.ico"
                        ToolTipText="CROSSRING Security"
                        DoubleClickCommand="{Binding ShowWindowCommand}">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Open Dashboard" Command="{Binding ShowWindowCommand}"/>
                    <Separator/>
                    <MenuItem Header="Status" IsEnabled="False">
                        <MenuItem.Icon>
                            <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Settings" Command="{Binding OpenSettingsCommand}"/>
                    <MenuItem Header="Exit" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
        
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="20,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="â›¨" FontSize="28" Foreground="{StaticResource AccentBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <TextBlock Text="CROSSRING" FontSize="24" FontWeight="Bold" 
                                   Foreground="{StaticResource ForegroundBrush}"/>
                        <TextBlock Text="Security Dashboard" FontSize="14" 
                                   Foreground="{StaticResource SecondaryForeground}"
                                   VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <Ellipse Width="10" Height="10" Fill="{Binding StatusColor}" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding ConnectionStatus}" 
                                   Foreground="{StaticResource SecondaryForeground}"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Sidebar Navigation -->
                <Border Grid.Column="0" Background="{StaticResource SidebarBrush}">
                    <StackPanel Margin="0,20,0,0">
                        <RadioButton x:Name="NavEvents" Content="ðŸ“Š Events" 
                                     Style="{StaticResource NavButtonStyle}" IsChecked="True"/>
                        <RadioButton x:Name="NavAnomalies" Content="âš ï¸ Anomalies" 
                                     Style="{StaticResource NavButtonStyle}"/>
                        <RadioButton x:Name="NavWhitelist" Content="âœ… Whitelist" 
                                     Style="{StaticResource NavButtonStyle}"/>
                        <RadioButton x:Name="NavNetwork" Content="ðŸŒ Network" 
                                     Style="{StaticResource NavButtonStyle}"/>
                        <RadioButton x:Name="NavSettings" Content="âš™ï¸ Settings" 
                                     Style="{StaticResource NavButtonStyle}"/>
                    </StackPanel>
                </Border>
                
                <!-- Content Area -->
                <Border Grid.Column="1" Padding="20">
                    <Grid>
                        <!-- Events View -->
                        <Grid Visibility="{Binding IsChecked, ElementName=NavEvents, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Recent Process Events" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding ProcessEvents}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      Style="{StaticResource DataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="150"/>
                                    <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="60"/>
                                    <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="150"/>
                                    <DataGridTextColumn Header="Path" Binding="{Binding ImagePath}" Width="*"/>
                                    <DataGridTextColumn Header="Decision" Binding="{Binding Decision}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        
                        <!-- Anomalies View -->
                        <Grid Visibility="{Binding IsChecked, ElementName=NavAnomalies, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Memory Anomalies" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Anomalies}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      Style="{StaticResource DataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="150"/>
                                    <DataGridTextColumn Header="PID" Binding="{Binding Pid}" Width="60"/>
                                    <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="150"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding AnomalyType}" Width="150"/>
                                    <DataGridTextColumn Header="Size" Binding="{Binding RegionSize}" Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        
                        <!-- Whitelist View -->
                        <Grid Visibility="{Binding IsChecked, ElementName=NavWhitelist, Converter={StaticResource BoolToVis}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Whitelisted Programs" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                            <DataGrid Grid.Row="1" ItemsSource="{Binding WhitelistEntries}"
                                      AutoGenerateColumns="False" IsReadOnly="True"
                                      Style="{StaticResource DataGridStyle}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Type" Binding="{Binding EntryType}" Width="80"/>
                                    <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*"/>
                                    <DataGridTextColumn Header="Added" Binding="{Binding AddedTimestamp}" Width="150"/>
                                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="200"/>
                                </DataGrid.Columns>
                            </DataGrid>
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                                <Button Content="Add Entry" Command="{Binding AddWhitelistCommand}" 
                                        Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,10,0"/>
                                <Button Content="Remove Selected" Command="{Binding RemoveWhitelistCommand}"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Status Bar -->
            <Border Grid.Row="2" Background="{StaticResource HeaderBrush}" Padding="15,0">
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"
                               Foreground="{StaticResource SecondaryForeground}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="Events: " Foreground="{StaticResource SecondaryForeground}"/>
                        <TextBlock Text="{Binding TotalEvents}" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="  |  Anomalies: " Foreground="{StaticResource SecondaryForeground}"/>
                        <TextBlock Text="{Binding TotalAnomalies}" Foreground="#FF6B6B"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
